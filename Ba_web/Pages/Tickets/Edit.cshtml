@page
@model Ba_web.Pages.Tickets.EditModel

<br />
<h2>Edit new ticket</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Ticket.ID"/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Ticket.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Ticket.Name" class="form-control" />
            </div>
            <span asp-validation-for="Ticket.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Ticket.AddedAt"></label>
            </div>
            <div class="col-6">
                <input asp-for="Ticket.AddedAt" class="form-control" />
            </div>
            <span asp-validation-for="Ticket.AddedAt" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Ticket.Type"></label>
            </div>
            <div class="col-6">
                <input asp-for="Ticket.Type" class="form-control" />
            </div>
            <span asp-validation-for="Ticket.Type" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back</a>
            </div>

        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}